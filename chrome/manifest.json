{
  "manifest_version": 2,

  "name": "Fake news exposer",
  "description": "Detects if content is fake news",
  "version": "1.0",

  "browser_action": {
    "default_icon": "faketext.jpg",
    "default_popup": "popup.html"
  },
  "background" : { "scripts": ["background.js"] },
  "permissions" : [
    "activeTab",
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
   ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "css": ["styles.css"],
      "js": ["faketweetexposer.js"]
    }
  ]
}