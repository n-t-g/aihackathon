{
  "manifest_version": 2,

  "name": "Truthicator",
  "description": "THE truthiness authority in the internet!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon-48.png",
    "default_popup": "popup.html"
  },
  "background" : { "page": "background.html" },
  "permissions" : [
    "activeTab",
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
   ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com; object-src 'self';",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}